<?xml version="1.0"?>
<model table="article_previews" model="ArticlePreview">
    <column type="string">id</column>
    <column type="string">size</column>
    <column type="string">type</column>
    <column type="string">content</column>
    <column type="string">image</column>
    <column type="string">video</column>
    <column type="int">order_id</column>
    <column type="string">related_article</column>
    <column type="string">button_description</column>

    <relations>
        <has-one model="Domains\Article\Article" local="related_article" foreign="id" />
    </relations>
</model>
